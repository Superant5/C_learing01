#include <iostream>
#include <string>
using namespace std;
int main()
{
    string str1="asd";
    string str2="123asd789asd123asd";
    string str3;
    int a=str2.find_last_of(str1);
    int a=str2.find_first_of(str1);
    int a=str2.find_last_not_of(str1);
    int a=str2.find_first_not_of(str1);
    int a=str2.rfind(str1);
    int a=str2.find(str1);
    cout <<a<<endl;
    return 0;
}
